<div class="container">

  <div class="row">

      <div class="col-lg-12">
        <h4 class="page-header">Upload image:</h4>

          <div class="form-group">
              <form action="/photo" method="POST" enctype="multipart/form-data">
                <div class="input-group">
                  <div class="input-group-addon"><span class="glyphicon glyphicon-search"></span></div>

                  <input type="file" class="form-control" name="image" id="image-selector">
                  <span class="input-group-btn"><button type="submit" id="upload-button" class="btn btn-default">Upload image</button></span>

                </div>
              </form>
          </div>

      </div>

  </div>
</div>

<div class="container">

  <div class="row">

    <div class="col-lg-12">
      <h4 class="page-header">Search images:</h4>

        <select class="multiple-searchbar" multiple="multiple" style="width: 90%">
          <% @photolabels.each do |photolabel| %>
          <option value="<%= photolabel %>"><%= photolabel %></option>
          <% end %>
        </select>

      <button class="btn btn-default" id="selected-labels">Search</button>
    </div>

  </div>

</div>

<div class="container">

    <div class="row">

        <div class="col-lg-12">
            <h4 class="page-header">Album:</h4>
        </div>

        <div id="image-board"></div>

    </div>
</div>
